@model Categoria
@{
    ViewData["Title"] = "Nueva Categoria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card shadow-lg border-0">
                <div class="card-header p-5 p-md-3 bg-secondary">
                    <h2 class="text-center m-0">Nueva Categoria</h2>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="Nombre" type="text" class="form-control" placeholder="Nombre de Categoria">
                            <label asp-for="Nombre"></label>
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <select asp-for="Estado" class="form-select">
                                <option selected disabled>Seleccione</option>
                                <option value="true">Activo</option>
                                <option value="false">Inactivo</option>
                            </select>
                            <label asp-for="Estado"></label>
                            <span asp-validation-for="Estado" class="text-danger"></span>
                        </div>
                        <div class="d-flex flex-column gap-3 flex-md-row">
                            <button class="btn btn-primary" type="submit"> <i class="fa-regular fa-floppy-disk"></i> Guardar</button>
                            <a asp-action="Index" class="btn btn-secondary"> <i class="fa-solid fa-arrow-left"></i> Volver</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial.cshtml" />
}

