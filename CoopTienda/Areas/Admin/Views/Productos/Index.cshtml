
@{
    ViewData["Title"] = "Lista de Productos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center mt-5 ">
        <div class="col-12">
            <div class="card shadow-lg bg-white p-4 border-0">
                <div class="d-flex flex-column flex-md-row justify-content-md-between">
                    <h2 class=" mb-4 mb-md-0">Lista de Productos</h2>
                    <a asp-area="Admin" asp-controller="Productos" asp-action="Crear" class="btn btn-primary text-white"> <i class="fa fa-plus" aria-hidden="true"></i> Nuevo Producto</a>
                </div>
                <div class="table-responsive mt-3">
                    <table id="tblDatos" class="table table-striped table-hover w-100">
                        <thead>
                            <tr>
                                <th>Codigo</th>
                                <th>Producto</th>
                                <th>Categoria</th>
                                <th>Marca</th>
                                <th>Costo</th>
                                <th>Estado</th>
                                <th>Accion</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/producto.js"></script>
}

