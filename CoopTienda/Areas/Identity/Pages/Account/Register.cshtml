@page
@using CoopTienda.Utilidades
@model RegisterModel
@{
    ViewData["Title"] = "Registrarse";
}

<div class="container-lg">
    <div class="row justify-content-center mt-5">
        <div class="col-lg-6 bg-white p-3 rounded shadow-lg">
            <h1 class="text-center mb-3">@ViewData["Title"]</h1>
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="row">
                    <div class="col-12 col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Nombre" class="form-control" autocomplete="on" aria-required="true" placeholder="Nombre" />
                            <label asp-for="Input.Nombre"></label>
                            <span asp-validation-for="Input.Nombre" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Apellido" class="form-control" autocomplete="on" aria-required="true" placeholder="Apellido" />
                            <label asp-for="Input.Apellido"></label>
                            <span asp-validation-for="Input.Apellido" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Input.PhoneNumber" class="form-control" autocomplete="on" aria-required="true" placeholder="Telefono" />
                            <label asp-for="Input.PhoneNumber"></label>
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Cedula" class="form-control" autocomplete="on" aria-required="true" placeholder="Cedula" id="Cedula"/>
                            <label asp-for="Input.Cedula"></label>
                            <span asp-validation-for="Input.Cedula" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Ciudad" class="form-control" autocomplete="on" aria-required="true" placeholder="Ciudad" />
                            <label asp-for="Input.Ciudad"></label>
                            <span asp-validation-for="Input.Ciudad" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Pais" class="form-control" autocomplete="on" aria-required="true" placeholder="Pais" />
                            <label asp-for="Input.Pais"></label>
                            <span asp-validation-for="Input.Pais" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="off" aria-required="true" placeholder="nombre@correo.com" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Direccion" class="form-control" autocomplete="on" aria-required="true" placeholder="Direccion" />
                    <label asp-for="Input.Direccion"></label>
                    <span asp-validation-for="Input.Direccion" class="text-danger"></span>
                </div>
                @if (User.IsInRole(DS.Admin))
                    {
                    <div class="form-floating mb-3">
                        <select asp-items="Model.Input.ListaRol" asp-for="Input.Role" class="form-select" aria-label="Floating label select example">
                            <option selected>Seleccion un Rol</option>
                        </select>
                        <label asp-for="Input.Role"></label>
                    </div>
                    }
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.ConfirmPassword"></label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Registrarse</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function () {
            $("#Cedula").inputmask("999-9999999-9"); // formato de cédula
        });
    </script>
}
