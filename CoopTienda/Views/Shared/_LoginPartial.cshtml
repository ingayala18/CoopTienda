@using CoopTienda.Modelo
@using Microsoft.AspNetCore.Identity
@inject SignInManager<UsuarioAplicacion> SignInManager
@inject UserManager<UsuarioAplicacion> UserManager


<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        var usuario = await UserManager.GetUserAsync(User);
        <li class="nav-item">
            <a class="nav-link text-white">Hola @usuario?.Nombre!</a>
            @* <a class="nav-link text-white" title="Manage">Hello @User.Identity?.Name!</a> *@
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-white">Salir</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>

